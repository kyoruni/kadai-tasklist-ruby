<%= form_for(task) do |f| %>

  <!-- 制約のエラーがあったら表示 -->
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <!-- message.errors.full_messages でバリデーションエラーに対するメッセージ配列を取得し、 -->
        <!-- each を使ってエラーメッセージを1つずつ表示 -->
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label      :status, 'ステータス' %>
  <%= f.text_field :status %>
  <%= f.label      :content, 'タスク' %>
  <%= f.text_field :content %>
  <%= f.submit '作成' %>

<% end %>

<%= link_to '一覧に戻る', tasks_path %>